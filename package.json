{
  "name": "blog-api",
  "version": "0.0.1",
  "engines": {
    "node": "8.11.1"
  },
  "private": true,
  "scripts": {
    "start": "node — inspect=5858 -r ts-node/register src/bin/www.ts",
    "build": "tsc",
    "postinstall": "npm run build",
    "dev": "./node_modules/nodemon/bin/nodemon.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "mongo": "mongod --dbpath db",
    "lint": "./node_modules/.bin/tslint src/**/*.ts",
    "lint:fix": "./node_modules/.bin/tslint src/**/*.ts --fix",
    "precommit": "pretty-quick --staged"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "dependencies": {
    "bcrypt": "^2.0.1",
    "connect-mongo": "^2.0.1",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "express": "~4.16.0",
    "express-session": "^1.15.6",
    "express-validator": "^5.2.0",
    "mongoose": "^5.1.1",
    "ramda": "^0.25.0",
    "serve-favicon": "^2.5.0",
    "debug": "^3.1.0",
    "morgan": "~1.9.0",
    "jest": "^23.5.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/connect-mongo": "0.0.38",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "0.0.30",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/mongoose": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.7.0",
    "eslint": "^4.17.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "nodemon": "^1.17.4",
    "prettier": "1.13.7",
    "pretty-quick": "^1.6.0",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  }
}
